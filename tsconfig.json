{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es2022",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
    },
    "include": ["src/**/*.ts", "test/**/*.ts", "docs/*.ts"],
    "exclude": ["node_modules", "coverage", "dist"],
    "ts-node": {
        "transpileOnly": true,
        "compilerOptions": {
            "noEmit": true
        },
    }
}
